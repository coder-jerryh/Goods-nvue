<script>
	import mNav from '../../components/m-nav/index.nvue'
	import blogList from '../components/blog-list.nvue'
	import mScroll from '../../components/m-scroll/index.nvue'
	import mImage from '../../components/m-image/index.nvue'
	import {
		Confirm,
		Toast
	} from '../../utils/popup.js'
	import {
		getBlogerInfoApi,
		getBlogerBlogApi,
		followBlogerApi,
		unFollowBlogerApi,
		shieldBlogerApi
	} from '../../api/homePage.js'
	import {
		mapGetters,
		mapState,
		mapMutations
	} from 'vuex'

	const toLogin = () => {
		uni.navigateTo({
			url: '/pages/mine/login'
		})
	}
	let childScroll = ''
	export default {
		components: {
			blogList,
			mScroll,
			mNav,
			mImage
		},
		data() {
			return {
				pages: {
					page: 1,
					last_create_time: ''
				},
				scrollTop: 0,
				blogerInfo: {
					intro: ''
				},
				recommendBloger: [],
				blogList: [],
				blogerId: '',
				displayIntro: false,
				avatar: 'https://himg.bdimg.com/sys/portraitn/item/public.1.aad81ae4.OK7fJ14XyuTYKcEhMVO-8w',
				list: [],
				navTop: 0,
				barHeight: 0,
				/** @Tab **/
				tabs: {
					1: 'ËÆ¢ÈòÖ',
					2: 'Êé®Ëçê'
				},
				type: 1
			}
		},
		computed: {
			...mapState(['shareInfo', 'userInfo']),
			...mapGetters(['isLogin'])
		},
		onShareAppMessage() {
			return this.shareInfo
		},
		onPullDownRefresh() {
			this.$refs[childScroll].pullRefresh()
		},
		onReachBottom() {
			this.$refs[childScroll].loadMore()
		},
		// onPageScroll ({scrollTop}) {
		//   this.scrollTop = scrollTop
		// },
		onLoad(options) {
			if (options.scene) {
				// Ëß£Á†Å‰∫åÁª¥Á†Å
				this.blogerId = unescape(options.scene).split('=')[1];
			}else{
				this.blogerId = options.id
			}
			childScroll = getApp().globalData.platform === 'wxapp' ? 'mScroll' : 'blogList'
			// ËÆæÁΩÆÊ†∑Âºè
			this.setStyle()
			this.getData()
		},
		methods: {
			...mapMutations(['setShare']),
			// Âçö‰∏ª‰ø°ÊÅØ
			getData() {
				let requestApi = getBlogerBlogApi
				let params = {
					id: this.blogerId
				}
				if (this.pages.page === 1) {
					requestApi = getBlogerInfoApi
				} else {
					params.last_create_time = this.pages.last_create_time
				}
				requestApi(params).then(({
					data
				}) => {
					if (this.pages.page === 1) {
						this.blogList = []
						this.blogerInfo = {
							...data,
							...data.blog_info
						}
						this.recommendBloger = data.recom_bloger
						this.setShare({
							title: this.blogerInfo.remark_name || this.blogerInfo.name, // ËΩ¨ÂèëÂêé ÊâÄÊòæÁ§∫ÁöÑtitle
							path: `/pages/homePage/bloger?id=${this.blogerInfo.id}&shareUid=${this.userInfo.uid || ''}`, // Áõ∏ÂØπÁöÑË∑ØÂæÑ
							imageUrl: this.blogerInfo.share_img
						})
					}
					const post_list = data.post_list.map(item => {
						return {
							...item,
							blog: this.blogerInfo
						}
					})
					// ‰∏çÊòØ‰ºöÂëòÔºåË¶ÅÁúãÂπøÂëä
					if (!this.userInfo.is_vip && data.post_list.length && (data.adpid || data.wx_adpid)) {
						// if (this.userInfo.is_vip && data.post_list.length && (data.adpid || data.wx_adpid)) {
						post_list.push({
							type: 'ad',
              adpid: data.adpid,
              wx_adpid: data.wx_adpid
						})
					}
					this.blogList = [...this.blogList, ...post_list]
					this.pages.last_create_time = data.last_create_time
					this.$refs[childScroll].loadSuccess({
						total: this.blogList.length,
						hasNextPage: data.has_more
					})
				})
			},
			// ÊâìÂºÄËèúÂçïüìñ
			showActionSheet() {
				const that = this
				uni.showActionSheet({
					itemList: ['‰∏æÊä•', 'ÊãâÈªë'],
					success({
						tapIndex
					}) {
						if (tapIndex === 1) {
							Confirm(
								'ÊèêÁ§∫',
								'Á°ÆÂÆöÊãâÈªëËØ•Âçö‰∏ªÂêóÔºü',
								'Á°ÆÂÆö',
								() => {
									shieldBlogerApi({
										id: that.blogerInfo.id
									}).then(() => {
										Toast('success', 'Â∑≤ÊãâÈªëÂçö‰∏ª')
									})
								}
							)
						} else {
							uni.navigateTo({
								url: `/pages/mine/report?id=${that.blogerInfo.id}&type=reportBlog&bloger=${that.blogerInfo.remark_name || that.blogerInfo.name}`
							})
						}
					}
				})
			},
			// Âçö‰∏ªÈ°µÈù¢
			toBloger(item) {
				uni.navigateTo({
					url: `/pages/homePage/bloger?id=${item.id}`
				})
			},
			delBloger(i) {
				this.recommendBloger.splice(i, 1)
			},
			// ËÆ¢ÈòÖüíó
			focusBloger(e, item) {
				if (!this.isLogin) return toLogin()
				if (item.is_follow) {
					Confirm(
						'ÊèêÁ§∫',
						'Á°ÆÂÆöÂèñÊ∂àËÆ¢ÈòÖÂêóÔºü',
						'Á°ÆÂÆö',
						() => {
							unFollowBlogerApi({
								id: item.id
							}).then(() => {
								item.is_follow = false
								Toast('success', 'Â∑≤ÂèñÊ∂àËÆ¢ÈòÖÔºÅ')
								this.changeItem()
							})
						}
					)
				} else {
					followBlogerApi({
						id: item.id
					}).then(data => {
						item.is_follow = true
						Toast('success', 'Â∑≤ËÆ¢ÈòÖÔºÅ')
						this.changeItem()
					})
				}
				// #ifdef APP-NVUE
				e.stopPropagation()
				// #endif
			},
			// ÂàáÊç¢Tab
			changeTab(type) {
				this.type = type
			},
			// Âà∑Êñ∞ÂàóË°®
			changeItem(item, index) {
				const list = [...this.list]
				list[index] = {
					...item
				}
				this.list = [...list]
			},
			setStyle() {
				const safeArea = uni.getSystemInfoSync().safeArea
				// this.barHeight = safeArea.bottom - safeArea.height + 'rpx'
				// #ifdef APP-PLUS
				// ÂØºËà™Ê†èÈ´òÂ∫¶
				this.navTop = safeArea.top
				// ÂØºËà™Ê†èÁîµÊ±†„ÄÅÊó∂Èó¥È¢úËâ≤
				plus.navigator.setStatusBarStyle('light') //Âè™ÊîØÊåÅdarkÂíålight
				// #endif

				// #ifdef MP-WEIXIN
				// ÂØºËà™Ê†èÈ´òÂ∫¶
				this.navTop = uni.getMenuButtonBoundingClientRect().top + 6
				// #endif
			},
			back() {
				uni.navigateBack()
			},
		}
	}
</script>

